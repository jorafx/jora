{
  "name": "jora-api",
  "version": "1.0.0",
  "description": "The jora-api is the main api of jora, that handle our core data",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec babel-node src/index.js",
    "build": "babel src --out-dir dist",
    "start": "node dist/index.js",
    "lint": "standard ./src/**/*.js",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha ./src/**/*.test.js --compilers js:babel-core/register -u bdd -R list",
    "test:watch": "npm t -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jorafx/jora.git"
  },
  "keywords": [
    "jora",
    "claudiajs",
    "aws",
    "koa"
  ],
  "author": "Marcus Hammarberg <marcusoftnet@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "should": "^11.2.0",
    "standard": "^8.6.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "co-body": "^4.2.0",
    "co-monk": "^1.0.0",
    "koa": "^1.2.5",
    "koa-route": "^2.4.2",
    "monk": "^4.0.0"
  }
}
